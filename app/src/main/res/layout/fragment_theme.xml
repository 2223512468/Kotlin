<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="5dp"
    android:paddingEnd="10dp"
    android:paddingStart="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="背        景："
            android:textColor="@color/main_text_color"
            android:textSize="15sp" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_inner_layout_bg"
                    android:orientation="horizontal"
                    android:padding="1dp">

                    <com.xiaolei.okbook.Widgets.CircleView
                        android:id="@+id/theme_white"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_margin="2dp"
                        android:button="@null"
                        app:color="@color/white" />

                    <com.xiaolei.okbook.Widgets.CircleView
                        android:id="@+id/theme_cyan"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_margin="2dp"
                        android:button="@null"
                        app:color="#CFDBE5" />

                    <com.xiaolei.okbook.Widgets.CircleView
                        android:id="@+id/theme_light_black"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_margin="2dp"
                        android:button="@null"
                        app:color="#383D42" />

                    <com.xiaolei.okbook.Widgets.CircleView
                        android:id="@+id/theme_deep_black"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_margin="2dp"
                        android:button="@null"
                        app:color="#282828" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/shape_inner_layout_bg"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <com.xiaolei.okbook.Widgets.CircleView
                        android:id="@+id/chouse_bg_color"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginStart="4dp"
                        app:color="#808080" />

                    <View
                        android:id="@+id/theme_own_pic"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_margin="1dp"
                        android:background="@drawable/selector_model_own" />

                </LinearLayout>

            </LinearLayout>
        </HorizontalScrollView>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="文字颜色："
            android:textColor="@color/main_text_color"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:background="@drawable/shape_inner_layout_bg"
            android:orientation="horizontal"
            android:padding="1dp">

            <com.xiaolei.okbook.Widgets.CircleView
                android:id="@+id/textcolor_white"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_margin="2dp"
                android:button="@null"
                app:color="@color/main_text_color" />

            <com.xiaolei.okbook.Widgets.CircleView
                android:id="@+id/textcolor_cyan"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_margin="2dp"
                android:button="@null"
                app:color="#262626" />

            <com.xiaolei.okbook.Widgets.CircleView
                android:id="@+id/textcolor_light_black"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_margin="2dp"
                android:button="@null"
                app:color="#8D9BA8" />

            <com.xiaolei.okbook.Widgets.CircleView
                android:id="@+id/textcolor_deep_black"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_margin="2dp"
                android:button="@null"
                app:color="#808080" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:background="@drawable/shape_inner_layout_bg"
            android:padding="3dp">

            <com.xiaolei.okbook.Widgets.CircleView
                android:id="@+id/chouse_txtcolor_tv"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@color/trans"
                app:color="@color/main_color" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>